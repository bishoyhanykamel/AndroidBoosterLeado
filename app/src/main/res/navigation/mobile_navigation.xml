<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.leado.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_achievements_"
            app:destination="@id/achievements_" />
    </fragment>

    <fragment
        android:id="@+id/achievements_"
        android:name="com.example.leado.Achievements_"
        android:label="fragment_achievements_"
        tools:layout="@layout/fragment_achievements_" >
        <action
            android:id="@+id/action_achievements__to_profileFragment_"
            app:destination="@id/profileFragment_" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment_"
        android:name="com.example.leado.ProfileFragment_"
        android:label="fragment_profile_"
        tools:layout="@layout/fragment_profile_" />
</navigation>