<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment_">


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bluebackground">

        <LinearLayout
            android:id="@+id/layout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/profilebackbtn"
                    android:layout_marginRight="180dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:background="#00DDDDDD"
                    android:src="@drawable/back" />
                <ImageButton
                    android:layout_marginLeft="130dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleX="2"
                    android:scaleY="2"
                    android:background="#00DDDDDD"
                    android:src="@drawable/more" />
            </LinearLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/whitebg"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Emily"
                android:textColor="#000000"
                android:textSize="28sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="student"
                android:textColor="#757575"
                android:textSize="22sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/line1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="60dp"
            android:text="6"
            android:textSize="20sp"
            android:textColor="#000000"
            app:layout_constraintEnd_toStartOf="@+id/line2"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout11" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="20sp"
            android:textColor="#000000"
            android:paddingHorizontal="50dp"
            app:layout_constraintEnd_toStartOf="@id/line3"
            app:layout_constraintStart_toEndOf="@id/line1"
            app:layout_constraintTop_toBottomOf="@id/layout11" />

        <TextView
            android:id="@+id/line3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="11"
            android:textColor="#000000"
            android:textSize="20sp"
            android:paddingHorizontal="55dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/line2"
            app:layout_constraintTop_toBottomOf="@+id/layout11" />

        <TextView
            android:id="@+id/line4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:text="courses"
            android:textColor="#000000"
            android:textSize="16sp"
            android:paddingHorizontal="40dp"
            app:layout_constraintEnd_toStartOf="@id/line5"
            app:layout_constraintTop_toBottomOf="@id/line1"/>

        <TextView
            android:id="@+id/line5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="points"
            android:textSize="16sp"
            android:paddingHorizontal="45dp"
            app:layout_constraintStart_toEndOf="@id/line4"
            app:layout_constraintEnd_toStartOf="@id/line6"
            app:layout_constraintTop_toBottomOf="@id/line2"
            />
        <TextView
            android:id="@+id/line6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Rank"
            android:textSize="16sp"
            android:paddingHorizontal="50dp"
            app:layout_constraintTop_toBottomOf="@id/line3"
            app:layout_constraintStart_toEndOf="@id/line5"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="20dp"
            android:id="@+id/profileRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line5"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="1"              />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>