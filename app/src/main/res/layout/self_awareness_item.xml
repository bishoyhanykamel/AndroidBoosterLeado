<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190.4dp"
    android:layout_height="250.11dp"
    android:background="@drawable/item_corner"
    android:elevation="30dp"
    android:layout_marginTop="42.5dp"
    android:layout_marginHorizontal="19dp">

    <TextView
        android:id="@+id/TitleText"
        android:layout_width="179.2dp"
        android:layout_height="61.71dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="9.24dp"
        android:gravity="center"
        android:textColor="#901f314a"
        android:text="Support Systems"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Lesson"
        android:layout_width="93.06dp"
        android:layout_height="25.41dp"
        android:layout_marginTop="3dp"
        android:text="Lesson 1"
        android:textAlignment="center"
        android:textColor="#511f314a"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TitleText" />

    <TextView
        android:id="@+id/lessonText"
        android:layout_width="178.45dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2.6dp"
        android:fontFamily="@font/rubik_light"
        android:text="Building an integral support system,Pushes you to grow, strech more, mainly asks why things wont work, and bullet proofs ideas"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Lesson" />

    <Button
        android:id="@+id/ItemButton"
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:background="@drawable/start_button"
        android:text="Start"
        android:textSize="12dp"
        android:layout_marginBottom="3dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lessonText" />

    <ImageView
        android:layout_width="188dp"
        android:layout_height="129.7dp"
        android:background="@drawable/bubbles"
        android:layout_marginTop="5.21dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>